{% extends 'base.html.twig' %}

{% block body %}

    <div style="display: flex; justify-content: center; height: 100%; flex-direction: column; align-items: center;">
        <div style="min-width: 500px; min-height: 500px; padding: 2em; background-color: white; display: flex; justify-content: center; flex-direction: column; align-items: center; border-radius: 6px;">
            <img style="margin-bottom: 2em;" src="{{ asset('build/images/regiosuisse-logo.png') }}" alt="Logo" class="logo" style="width: 16em; height: auto;">
            {% for message in app.flashes('message') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
